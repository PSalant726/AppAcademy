<h1>Create a rental request!</h1>

<form action="cat_rental_requests_url" method="POST">
  <label>Select a Cat!!!!!!!!
    <select name="cat_rental_request[cat_id]">
      <option value="Select a cat!" disabled="true" selected="true">Select cat</option>
      <% @cats.each do |cat| %>
        <option value="<%= cat.id %>"><%= cat.name %></option>
      <% end %>
    </select>
  </label>

  <label>Start date
    <input type="date" name="cat_rental_request[start_date]" value ="<%cat_rental_request.start_date%>"/>
  </label>
</form>
