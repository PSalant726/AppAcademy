<form action="<%= action_url %>" method="post">
  <%= auth_token %>
  <label>username
    <input type="text" name="user[username]" placeholder="Username">
  </label>
  <label>password
    <input type="password" name="user[password]" placeholder="Password">
  </label>
  <input type="submit" value="<%= submit_text %>">
</form>
